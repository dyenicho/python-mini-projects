# weird simulation of signing up/in at some website. here it is.
# Will add some comments soon.
# Will make notebook system soon.

import os.path

def dataHandler():
    global username
    global password
    username = input('Enter nickname: ')
    password = input('Enter password: ')
    return username, password


def noteMaker():   
    note_name = input('Enter note\'s name: ') + '.txt'
    title = 'title:' + input('Enter a title: ') + '\n'
    with open(os.path.join(notesLocation, note_name), 'w+') as note:
        note.write(title)
        note.write('------------note--------------\n')
        some_text = input('note: ')
        note.write(some_text)
        note.write('\n------------------------------')


def exitAsker():
    asker = input('log out?(Y/N)')
    return asker


notesLocation = os.path.expanduser('~') + '\Desktop\\my python notebook\\'
os.makedirs(notesLocation)       # making location at Desktop where notes will be saved

print('Aw, new dude here! Time to sign up.')
dataHandler()
database = {}
database.update({username: password})
tries = 4
while True:
    if exitAsker() == 'Y':
      if input('You are not logged in the system. Sign up or sign in?') == 'sign up':
        dataHandler()
        database.update({username: password})
      else:
        while tries != 0:
          dataHandler()
          if username not in database and password not in database:
            tries -= 1
            print('Invalid data, please, try again.', tries, 'tries remain')
            if tries == 0:
                print('You\'re blocked')
          else:
            break
    else:
      print('there are nothing btw. Start again.')
      continue
